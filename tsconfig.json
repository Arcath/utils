{
  "extends": "./node_modules/kcd-scripts/shared-tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "outDir": "./lib",
    "noEmit": false,
    "target": "es5",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}