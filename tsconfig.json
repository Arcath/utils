{
  "extends": "./node_modules/kcd-scripts/shared-tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "outDir": "./lib",
    "noEmit": false,
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "exclude": ["lib", "node_modules", "src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
